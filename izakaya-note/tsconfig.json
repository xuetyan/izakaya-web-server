{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "isolatedModules": false,
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["*", "src/*"]
    },
    "types": [ "vite/client" ]
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
